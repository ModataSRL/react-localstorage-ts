  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "dts-jest": "^23.3.0",
    "fp-ts": "^2.9.5",
    "husky": "^5.1.1",
    "io-ts": "^2.2.15",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
